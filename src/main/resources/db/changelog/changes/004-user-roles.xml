<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Example changeset: Adding user roles functionality -->
    
    <changeSet id="004-001" author="developer">
        <comment>Create roles table for user role management</comment>
        <createTable tableName="roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-002" author="developer">
        <comment>Add role_id column to users table</comment>
        <addColumn tableName="users">
            <column name="role_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="004-003" author="developer">
        <comment>Add foreign key constraint for user roles</comment>
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="role_id"
                                referencedTableName="roles" referencedColumnNames="id"
                                constraintName="fk_users_role"/>
    </changeSet>

    <changeSet id="004-004" author="developer">
        <comment>Insert default roles</comment>
        <insert tableName="roles">
            <column name="name" value="ADMIN"/>
            <column name="description" value="Administrator with full access"/>
        </insert>
        
        <insert tableName="roles">
            <column name="name" value="USER"/>
            <column name="description" value="Regular user with limited access"/>
        </insert>
        
        <insert tableName="roles">
            <column name="name" value="MODERATOR"/>
            <column name="description" value="Moderator with content management access"/>
        </insert>
    </changeSet>

    <changeSet id="004-005" author="developer">
        <comment>Assign default role to existing users</comment>
        <update tableName="users">
            <column name="role_id" valueComputed="(SELECT id FROM roles WHERE name = 'USER')"/>
            <where>role_id IS NULL</where>
        </update>
    </changeSet>

    <changeSet id="004-006" author="developer">
        <comment>Create index for role_id column</comment>
        <createIndex tableName="users" indexName="idx_users_role_id">
            <column name="role_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
